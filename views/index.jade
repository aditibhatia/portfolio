	body
		.container

			.row.header
				.col-sm-1

				.col-sm-3.logo
					a.navButton(data-section='home')
						#title1 Aditi
						#title2 Bhatia

				.col-sm-7
					#nav
						a.navButton(data-section='home').active HOME
						span= '|'
						a.navButton(data-section='portfolio') PORTFOLIO
						span= '|'
						a.navButton(data-section='about') ABOUT
						span= '|'
						a.navButton(data-section='contact') CONTACT

			.row
				.line
				.lineBlack

			noscript.row
				h2 JavaScript is required to view the portfolio.

			.row.navSection#home
				.col-lg-1
				.col-xs-12.col-lg-10
					div !{content.home}
					#homeButton
						a.navButton(data-section="portfolio")
							img(src="/img/portfolio-button.png")

			.row.navSection#about
				.col-lg-1
				.col-xs-12.col-lg-10 !{content.about}

			.row.navSection#contact
				.col-lg-1
				.col-xs-12.col-lg-10 !{content.contact}			

			.navSection#portfolio
				.row#mainNav
					.col-md-2

					.col-md-2.col-sm-3.col-xs-12
						a.filterButton.active(data-filter='all') everything

					.col-md-2.col-sm-3.col-xs-4
						a.filterButton(data-filter='web') web

					.col-md-2.col-sm-3.col-xs-4
						a.filterButton(data-filter='video') video

					.col-md-2.col-sm-3.col-xs-4
						a.filterButton(data-filter='design') design

				.row.lineBlack

				.row#projects

			.row
				.gridSizer.col-xs-12.col-sm-6.col-md-4.col-lg-3

			#hidden(style="display:none;")

			.row
				.footer
					a.btnTop Back to Top

			.row
				.credit Copyright &copy; 2013 Aditi Bhatia. All rights reserved.
		link(href='/global.css?#{version}', rel='stylesheet', type='text/css')
		link(rel='icon' href="/img/icon.png")

		link(href='http://fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css')

		script window.global = {version: "#{version}", debug: !{devMode}, analyticsId: "#{analyticsId}"}
		script(src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js")
		script(src="//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.pack.js")

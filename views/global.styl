body
	font-family: 'Century Gothic', 'Questrial', Helvetica, sans-serif

body .container
	width: 100%

	background-color: #f4f1ee
a
	cursor: pointer

a:hover
	text-decoration: none

noscript
	text-align center
	color #a00

.logo
	cursor: pointer

.logo #title1
	font-size: 4.4em
	margin-bottom: -0.3em

.logo #title2
	font-size: 3.1em

.header
	background: #000
	color: #f4f1ee
	padding-top: 10px

.line
	height: 12px
	background: #fdd017

.lineBlack
	height: 5px
	background: #000

#nav
	padding-top: 5em
	font-size: 1.3em
	letter-spacing: 0.04em
	text-align: right
	color: #f4f1ee

#nav a
	color: #f4f1ee
	padding: 0 20px

#nav a:hover
	color: #fdd017

#nav a.active
	color: #fdd017

#homeButton
	text-align: center

#home
	font-size: 20px

#home h2
	color: #000

#about
	font-size: 18px

#about h2
	color: #000

#contact
	font-size: 18px

#contact h2
	color: #000

#mainNav
	width: 100%
	font-size: 1.5em
	color: #000
	padding: 5px 0px
	text-align: center

#mainNav a
	color: #000

#mainNav a:hover
	color: #fdd017
	background-color: #000
	border-radius: 10px
	padding-left: 20px
	padding-right: 20px
	padding-top: 3px
	padding-bottom: 3px

#mainNav a.active
	color: #fdd017
	background-color: #000
	border-radius: 10px
	padding-left: 20px
	padding-right: 20px
	padding-top: 3px
	padding-bottom: 3px

.gridSizer
	visibility: hidden

#projects .project
	padding-top: 30px
	display: inline-block

#projects .project img
	width: 100%
	margin: auto

.fancybox-title
	text-align: center
	font-weight: bold
	font-size: 20px
	padding-bottom: 5px

.comment
	text-align: center
	padding: 5px 0 0 0

.footer
	clear: both
	margin: auto
	font-size: 1.4em
	text-align: center
	padding-top: 2em
	font-weight: normal

.credit
	margin: auto
	text-align: center
	padding: 2em 0
	font-weight: normal


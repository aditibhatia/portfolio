body
	font-family: 'Century Gothic', "Trebuchet MS", Helvetica, sans-serif

body .container
	width: 100%

	background-color: #f4f1ee
a
	cursor: pointer

a:hover
	text-decoration: none

noscript
	text-align center
	color #a00

.logo
	cursor: pointer

.header
	background: #000
	color: #f4f1ee
	padding-top: 10px

.line
	height: 10px
	background: #1da6b6

.lineBlack
	height: 5px
	background: #000

#nav
	padding-top: 40px
	font-family: Georgia, serif
	font-size: 1.4em
	text-align: right
	color: #1da6b6

#nav a
	color: #1da6b6
	padding: 0 20px

#nav a:hover
	color: #f4f1ee

#nav a.active
	color: #f4f1ee

#nav span
	color: #1da6b6

#about
	font-size: 18px

#about h2
	color: #1da6b6

#contact
	font-size: 18px

#contact h2
	color: #1da6b6

#mainNav
	width: 100%
	font-size: 1.5em
	color: #000
	padding: 5px 0px
	text-align: center

#mainNav a
	color: #000

#mainNav a:hover
	color: #1da6b6

#mainNav a.active
	color: #1da6b6

.gridSizer
	visibility: hidden

#projects .project
	padding-top: 30px
	display: inline-block

#projects .project img
	width: 100%
	margin: auto

.fancybox-title
	text-align: center
	font-weight: bold
	font-size: 20px
	padding-bottom: 5px

.comment
	text-align: center
	padding: 5px 0 0 0

.footer
	clear: both
	margin: auto
	font-size: 1.4em
	text-align: center
	padding-top: 2em
	font-weight: normal

.credit
	margin: auto
	text-align: center
	padding: 2em 0
	font-weight: normal


body .container
	width: 100%

a
	cursor: pointer

a:hover
	text-decoration: none

.header
	background: #000
	color: #f4f1ee
	padding-top: 10px

.line
	width: 100%
	height: 10px
	background: #1da6b6

.lineBlack
	width: 100%
	height: 5px
	background: #000

#nav
	padding-top: 40px
	font-family: Georgia
	font-size: 20px
	text-align: right

#nav a
	color: #f4f1ee
	padding: 0 20px

#nav a:hover
	color: #1da6b6

#mainNav
	width: 100%
	font-family: Georgia
	font-size: 22px
	color: #000
	padding: 5px 0px
	text-align: center

#mainNav a
	color: #000

